{
  "name": "mathkey",
  "displayName": "MathKey",
  "description": "useful tools for math input",
  "keywords": [
    "math",
    "keybindings",
    "markdown",
    "latex"
  ],
  "version": "0.0.3",
  "publisher": "yfzhao",
  "preview": true,
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mathkey.helloWorld",
    "onLanguage:markdown",
    "onLanguage:latex"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mathkey.closeAllPreview",
        "title": "MathKey: Close All Preview"
      }
    ],
    "keybindings": [
      {
        "command": "mathkey.jumpOutOfMath",
        "key": "ctrl+enter",
        "when": "editorTextFocus && !editorReadonly && !suggestWidgetVisible && editorLangId =~ /latex|markdown/"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "mathkey.closeAllPreview",
          "group": "navigation",
          "when": "editorFocus"
        }
      ]
    }
  },
  "extensionDependencies": [
    "draivin.hscopes"
  ],
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.61.0",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "mathjax": "^3.2.0",
    "svg2base64": "^1.0.7"
  }
}
